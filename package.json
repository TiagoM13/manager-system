{
  "name": "manager-system",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest --maxWorkers=2 --passWithNoTests",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "test:all": "yarn test && yarn test:coverage",
    "prettier:watch": "yarn prettier . --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx \"src/\"",
    "lint:fix": "eslint src --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn run lint -- --fix",
      "yarn test -- --findRelatedTests --passWithNoTests --bail"
    ]
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.0.15",
    "dayjs": "^1.11.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "styled-components": "^6.1.8",
    "tailwind-merge": "^2.3.0",
    "ts-jest": "^29.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@faker-js/faker": "^8.4.1",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^4.0.0"
  },
  "main": "index.js",
  "repository": "https://github.com/TiagoM13/manager-system.git",
  "author": "Tiago Mota",
  "license": "MIT"
}
